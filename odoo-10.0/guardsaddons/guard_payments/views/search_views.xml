<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="guard_payments.payment_search_view" model="ir.ui.view">
      <field name="model">guard.payments</field>
      <field name="name">guard_payments search</field>
      <field name="arch" type="xml">
        <search>
          <field name="bill_number"/>
          <field name="party_company"/>
        </search>
      </field>
    </record>

  <record id="guard_payments.invoices_search_view" model="ir.ui.view">
    <field name="model">guard.invoices</field>
    <field name="name">guard_invoices search</field>
    <field name="arch" type="xml">
      <search>
        <field name="invoice_number"/>
        <field name="customer"/>
      </search>
    </field>
  </record>


</odoo>